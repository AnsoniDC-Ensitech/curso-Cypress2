{
  "name": "curso-cypress2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "limpiar-reporte": "rimraf ./allure-report && rimraf ./allure-results",
    "ejecutar-pruebas": "npx cypress run --headed --env allure=true",
    "generar-reporte": "allure generate allure-results -o allure-report --clean",
    "abrir-reporte": "allure open",
    "test": "run-s limpiar-reporte ejecutar-pruebas generar-reporte abrir-reporte --continue-on-error",
    "test-personalizada": "npx cypress run --headed --env allure=true --spec \"cypress/e2e/tests/autentificacion.cy.js\"",
    "test-personalizada1": "npx cypress run --headed --env allure=true --spec \"cypress/e2e/tests/catalogo-y-compras.cy.js\"",
    "test2": "run-s limpiar-reporte test-personalizada generar-reporte abrir-reporte --continue-on-error",
    "cy:parallel": "run-s limpiar-reporte && npx cypress-parallel -s ejecutar-pruebas --ci-build-id $RANDOM --record --parallel generar-reporte",
    "test3": "run-s limpiar-reporte test-personalizada1 generar-reporte abrir-reporte --continue-on-error"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnsoniDC-Ensitech/curso-Cypress2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AnsoniDC-Ensitech/curso-Cypress2/issues"
  },
  "homepage": "https://github.com/AnsoniDC-Ensitech/curso-Cypress2#readme",
  "devDependencies": {
    "cypress": "^15.2.0",
    "cypress-parallel": "^0.2.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@mmisty/cypress-allure-adapter": "^3.3.0",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1"
  }
}
